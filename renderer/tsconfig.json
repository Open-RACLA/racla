{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@image/*": ["public/images/*"],
      "@fonts/*": ["public/fonts/*"],
      "@hooks/*": ["hooks/*"],
      "@constants/*": ["constants/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "hooks/useNotifications.ts",
    "hooks/useRecentHistory.ts",
    "hooks/useWindowSize.ts"
  ],
  "exclude": ["node_modules"]
}
